{
  "manifest_version": 2,
  "author": "Daniyil Vasylenko",
  "name": "Twitch Auto Points",
  "version": "1.0.0",
  "homepage_url": "https://github.com/Spring3/twitch-auto-points",
  "description": "Automatic twitch channel points collection",
  "permissions": [
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' https://wwww.twitch.com; object-src 'self'",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon.svg",
      "32": "icons/icon.svg",
      "48": "icons/icon.svg",
      "64": "icons/icon.svg",
      "96": "icons/icon.svg",
      "128": "icons/icon.svg",
      "256": "icons/icon.svg"
    }
  },
  "content_scripts": [{
    "js": [
      "browser-polyfill.min.js",
      "contentScripts/worker.js"
    ],
    "matches": ["https://www.twitch.tv/*"],
    "match_about_blank": false,
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "icons/icon.svg",
    "32": "icons/icon.svg",
    "48": "icons/icon.svg",
    "64": "icons/icon.svg",
    "96": "icons/icon.svg",
    "128": "icons/icon.svg",
    "256": "icons/icon.svg"
  }
}
