{
  "manifest_version": 2,
  "author": "Daniyil Vasylenko",
  "name": "Twitch Auto Points",
  "version": "1.0.0",
  "homepage_url": "https://github.com/Spring3/twitch-auto-points",
  "description": "Automatic twitch channel points collection",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [{
    "js": [
      "browser-polyfill.min.js",
      "contentScripts/worker.js"
    ],
    "matches": ["https://www.twitch.tv/*"],
    "match_about_blank": false,
    "run_at": "document_idle"
  }],
  "page_action": {
    "default_icon": "icons/icon-128.svg"
  },
  "icons": {
    "16": "icons/icon-default.svg",
    "32": "icons/icon-default.svg",
    "48": "icons/icon-default.svg",
    "64": "icons/icon-default.svg",
    "96": "icons/icon-default.svg",
    "128": "icons/icon-default.svg",
    "256": "icons/icon-default.svg"
  },
  "theme": {
    "colors": {
      "button_background_active": "#00e6cb",
      "button_background_hover": "#00ad96"
    }
  }
}
